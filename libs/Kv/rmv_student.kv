#:import get_color_from_hex kivy.utils.get_color_from_hex
<Rmv_Student>:
	MDFloatLayout:
		size_hint:1,1
		minimum_height:1
		md_bg_color:get_color_from_hex('#add8e6')
		MDIconButton:
			icon:"arrow-left"
			theme_text_color: 'Custom'
			text_color: 3,3,3,1
			pos_hint:{"center_x":.08,"center_y":.95}
			ripple_scale:0
			on_release:
				root.manager.current = "Teachers_interface"
				root.manager.transition.direction = "right"
		MDLabel:
			text:"Remove Student"
			theme_text_color:"Custom"
			text_color:get_color_from_hex('#ffffff')
			font_name:"Ubuntu/Ubuntu-Bold"
			font_size:"24dp"
			pos_hint:{"center_x":.70,"center_y":.95}
		ScrollView:
			size_hint_y: .9
            do_scroll_y: True
            md_bg_color:1,0,0,.4
			MDGridLayout:
				cols:1
				size_hint:1,None
				pos_hint:{"top":.9}
				height:self.minimum_height
				spacing:40
				padding:20
				MDTextField:
					id:StuEnrollmentNumber
					text:""
					hint_text:"Enrollment No" 					
					text_color:0,0,0,1
					font_name:"Ubuntu/Ubuntu-Medium"
					hint_text_mode:"on_focus"
					disabled:False
					color_mode:"custom"
					line_color_normal:0,0,0,1
					line_color_focus:get_color_from_hex("000000")
				AnchorLayout:
					anchor_x:"left"
					padding:15
					MDFillRoundFlatButton:
						id:search_btn
						text:"[b]search[/b]"
						theme_text_color:"Custom"
						user_font_size:"25sp"
						ripple_scale:.3
						text_color:get_color_from_hex("#ffffff")
						md_bg_color_disabled:get_color_from_hex("#1c39bb60")
						text_color_disabled:[.1,.1,.1,1]
						md_bg_color:get_color_from_hex("#1c39bb") if search_btn.disabled == False else get_color_from_hex("#1c39bb60") 
						disabled:False
						on_release:
							loading_label.text = "loading"
							search_btn.disabled = True
							root.get_student_to_remove(StuEnrollmentNumber.text)
				MDGridLayout:
					cols:1
					size_hint:1,None
					pos_hint:{"top":.9}
					height:self.minimum_height
					spacing:"20dp"
					padding:"10dp"
					MDLabel:
						id:loading_label
						text:""					
						text_color:0,0,0,1
						font_name:"Ubuntu/Ubuntu-Medium"
						theme_text_color:"Custom"
						halign:"center"
					
					MDLabel:
						id:name_stu
						halign:"center"
						text:""
						text_color:0,0,0,1
						font_name:"Ubuntu/Ubuntu-Medium"
						theme_text_color:"Custom"
						
					MDLabel:
						id:class_stu
						halign:"center"
						text:""
						text_color:0,0,0,1
						font_name:"Ubuntu/Ubuntu-Medium"
						theme_text_color:"Custom"
						
					MDLabel:
						id:email_stu
						halign:"center"
						text:""
						text_color:0,0,0,1
						font_name:"Ubuntu/Ubuntu-Medium"
						theme_text_color:"Custom"
				MDRelativeLayout:
					size_hint:1,None
					height:"200dp"
					spacing:"30dp"
					padding:"15dp"
					MDFillRoundFlatIconButton:
						id:del_btn
						icon:"delete"
						pos_hint:{"center_y":.5,"center_x":.5}
						text:"Delete this student."
						theme_text_color:"Custom"
						text_color:1,0,0,1
						icon_color:1,0,0,1
						md_bg_color:.9,.9,.9,1
						opacity:0
						disabled:True if del_btn.opacity == 0 else False
						on_release:
							root.del_student(StuEnrollmentNumber.text)	
					MDLabel:
						pos_hint:{"center_y":.3,"center_x":.5}
						halign:"center"
						markup:True
						text:"[color=#ff0000][b]NOTE: [/b] After deleting,Student's data will be lost permanently.[/color]"
							
						
						
						
						
			