#:import get_color_from_hex kivy.utils.get_color_from_hex
#:set color get_color_from_hex("#ffffff")
#:set grid_background_color get_color_from_hex("#BAA7FB")
#:set text_color get_color_from_hex("#BAA7FB") 

<ItemForCustomBottomSheet>
	orientation:"vertical"
	md_bg_color:[.9,.9,.9,1]
	MDLabel:
		text:"DETAILS"
		halign:"center"
		font_style:"Subtitle2"
		font_size:"30dp"
		theme_text_color:"Custom"
		size_hint_y:.1
		text_color:get_color_from_hex("#4467c4")
		bold:True
	ScrollView:
		do_scroll_y:True
		MDGridLayout:
			cols:1
			padding:"10dp","5dp"
			MDLabel:
				text:f"MONTH: {app.fees_month}"
				halign:"left"
				font_style:"H6"
				bold:True
			MDLabel:
				text:f"[b]STUDENT NAME: {root.stuname}[/b]"
				halign:"left"
				font_style:"H6"
				markup:True
			MDLabel:
				text:f"[b]STUDENT'S CLASS: {root.stuclass}[/b]"
				halign:"left"
				font_style:"H6"
				markup:True
			MDLabel:
			    text: f"[b]AMOUNT: ₹{root.amount}[/b]"
			    halign:"left"
			    font_style:"H6"
			    markup:True
			MDFlatButton:
			    text:f"CONTINUE WITH ₹{root.amount}"
			    size_hint_x:1
			    theme_text_color:"Custom"
			    text_color:[.9,.9,.9,1]
			    bold:True
			    font_size:"28dp"
			    radius:[20]
			    md_bg_color:get_color_from_hex("#009688")
			    on_release:
			    	root.get_payment(root.amount,app.fees_month)
			    	app.closePayFees()
			    	
    	
<ContentCustomSheet>:
    id:Sheet
    orientation: "vertical"
    size_hint_y: None
    height: "600dp"
    radius:[20]
    ItemForCustomBottomSheet:
  		
                            
<Pay_Fees>:
	MDFloatLayout:
		size_hint:1,1
		md_bg_color:get_color_from_hex("#4467c4")
		MDIconButton:
			icon:"arrow-left"
			theme_text_color: 'Custom'
			ripple_scale:0
			text_color: get_color_from_hex('#000000')
			pos_hint:{"center_x":.08,"center_y":.95}
			on_release:
				root.manager.goback()
				root.manager.transition.direction = "right"
		MDLabel:
			text:"Payment Area"
			theme_text_color:"Custom"
			text_color:color
			font_name:"Ubuntu/Ubuntu-Bold"
			font_size:"24dp"
			pos_hint:{"center_x":.63,"center_y":.95}
		MDLabel:
			id:loading
			halign:"center"
			pos_hint:{"center_y":.5}
			font_size:"18dp"
			color:1,1,1,1
			font_name:"Ubuntu/Ubuntu-Bold"
			text:"Loading..." if Fees.children == [] else ""
		ScrollView:
			size_hint_y: .9
			do_scroll_y:True
			MDGridLayout:
				cols:1
				size_hint:1,None
				pos_hint:{"top":.9}
				height:self.minimum_height
				spacing:30
				padding:20
				MDList:
					id:Fees
					radius:[30]
					divider:'Inset'
					spacing:15
					md_bg_color:get_color_from_hex("#ffffff")
									